<div class="user">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<form class="form-signin" action="/createAdmin" method="POST" enctype="multipart/form-data">

			</div>
		</div>

	
			<!--Email, Password and Phone Number-->
			<div class="frame">
			<h3 class="register mt-3">Create A New Admin<h3><hr>
			<div class="row mt-4 justify-content-md-center">
					<div class="col-md-6">
						<label class="sr-only" for="firstName"></label>
				<input type="text" class="form-control required" placeholder="First Name" name="firstName" id="firstName" required><br>
						<label class="sr-only" for="lastName"></label>
				<input type="text" class="form-control required" placeholder="Last Name" name="lastName" id="lastName" required><br>
						<label for="inputEmail" class="sr-only">Email</label>
				 <input type="email" id="inputEmail" class="form-control required" placeholder="Email Address" name="email" required><br>
				 
						
		 <label for="adminCode" class="sr-only">Admin Code</label>
<input hidden type="text" id="adminCode" class="form-control required" placeholder="Admin Code" name="adminCode" value="zmDecuh3bK566w4" required><br>
				</div>
								
						<!-- Street Address, City, State, -->
<div class="col-md-6">
	<label for="inputPassword" class="sr-only">Password</label>
				 <input type="password" id="inputPassword" class="form-control required" placeholder="Password" name="password" required><br>
				<label  class="sr-only" for="phoneNumber">Phone Number</label>
		<input type="tel" id="phoneNumber" class="form-control required" placeholder="Phone e.g: 1234567890" name="username" 
			   pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required><br>
				

					<!--Profile Picture -->

						<div class="form-control image required">
							<label for="image">Profile Picture</label>
					<input type="file" accept="image/*" name="image" id="image" style="width: 230px" src="download.png" required>
						</div>
					</div>
			
			</div>
				</div>
		
		<!--Submit Form Here-->
      <button class=" col-md-6 btn btn-lg btn-block mx-auto" type="submit">Create</button>


		</form>
			</div>
		</div>



	

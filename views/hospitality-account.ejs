  <link rel="stylesheet" href="/stylesheets/registeration.css">
	
  <div class="user">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
		<form class="form-signin" action="/hospitality-account" method="POST" enctype="multipart/form-data">
			</div>
		</div>
			<!--Email, Password and Phone Number-->
			<div class="frame">
				<h3 class="register mt-3">Create A New Hospitality Account</h3>
				<hr>
				<div class="row mt-4 justify-content-md-center">
					<div class="col-md-6">
						<label class="sr-only" for="companyName">Company Name</label>
						<input type="text" class="form-control required" placeholder="Company Name" name="companyName" id="companyName" required>
						<br>
						<label class="sr-only" for="phoneNumber">Phone Number</label>
						<input type="tel" id="phoneNumber" class="form-control required" placeholder="Phone e.g: 1234567890" name="username" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required>
						<br>
						<label for="inputEmail" class="sr-only">Email</label>
						<input type="email" id="inputEmail" class="form-control required" placeholder="Email Address" name="email" required>
						<br>
						<label for="inputPassword" class="sr-only">Password</label>
						<input type="password" id="inputPassword" class="form-control required" placeholder="Password" name="password" required>
					</div>
					<!-- Street Address, City, State, -->
					<div class="col-md-6">
						<label class="sr-only" for="directLine">Direct Line</label>
						<input type="tel" id="directLine" class="form-control required" placeholder="Direct Line" name="directLine" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required>
						<br>
						<label class="sr-only" for="pointOfContact">Point of Contact</label>
						<input type="text" class="form-control required" placeholder="Point of Contact" name="pointOfContact" id="pointOfContact" required>
						<br>
						<label class="sr-only" for="companyAddress">Company Address</label>
						<input type="text" class="form-control required" placeholder="Company Address" name="companyAddress" id="companyAddress" required>
						<br>
						<!--Logo Upload -->
						<div class="form-control image required" style="margin: 0 0 10px 0 !important;">
							<label for="image">Company Logo</label>
							<input type="file" accept="image/*" name="image" id="image" style="width: 230px" src="download.png" required>
						</div>
					</div>
				</div>
			</div>
			<!--Submit Form Here-->
			<button class="col-md-6 btn btn-lg btn-block mx-auto" type="submit">Create</button>
			<button class="col-md-6 btn btn-lg btn-block my-3 mx-auto" type="button" onclick="location.href = '/admin'">Back</button>
		</form>

	</div>
</div>

	

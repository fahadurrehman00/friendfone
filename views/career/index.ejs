	<script type="text/javascript">
		const ham = document.querySelector('#ham');
		const videoModal = document.querySelector('#videoModal');
		const mobile_nav = document.querySelector('.nav_lists');
		const copyright = document.querySelector('#copyright p');
		
		ham.addEventListener('click', (e) => {
			e.preventDefault();
			mobile_nav.classList.toggle('extend');
		});

		videoModal.addEventListener('hide.bs.modal', e => {
			video = document.querySelector('video');
			video.pause();
		})
		videoModal.addEventListener('show.bs.modal', e => {
			video = document.querySelector('video');
			video.play();
		})

		const headerSelector = `section.about_section:nth-child(3) .about_part_one div:nth-child(2) h1`;
		const paraSelector = `section.about_section:nth-child(3) .about_part_one div:nth-child(2) p`;
		const btnSelector = `section.about_section:nth-child(3) .about_part_one div:nth-child(2) a`
		document.addEventListener("DOMContentLoaded", (e) => {
			document.querySelector(headerSelector).textContent = `Who We Are`;
			document.querySelector(paraSelector).textContent = `Looking for an exciting career with new challenges and opportunities each day? You’re in the right place! At FriendFone, we’re dedicated to creating a laid back but efficient work environment. All of our current opens are below! `;
			const btn = document.querySelector(btnSelector);
			btn.textContent = 'Apply Now';
			btn.target = '_blank';
			btn.href = 'https://ArvoGP.com';
			
			copyright.textContent = `© Copyright ${new Date().getFullYear()} FriendFone. All Rights Reserved.`

		});


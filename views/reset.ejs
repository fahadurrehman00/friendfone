
<%- include ("./partials/header") %>
<link rel="stylesheet" href="/stylesheets/registeration.css">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap" rel="stylesheet"> 
<style>
input[type="text"],[type="email"] ,[type="password"],[type="tel"]
{
	width: 100% !important;

}
</style>
<div class="container">
	<div class="row user">
		<div class="col-md-12">
			<h1 class="register h3 mt-5">Reset Password</h1>
			
			<form class="form-signin frame" action="/reset/<%= token %>" method="POST">
		 	
		  <div class="form-group">
		    <label for="password" class="sr-only">New Password</label>
	<input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control" required>
		  </div>
		  <div class="form-group">
		    <label for="confirm" class="sr-only">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control" required>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-success btn-block register2">Update Password</button>
		  </div>
		</form>
	</div>
</div>
	
</div>
<%- include ("./partials/newFooter") %>